<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CalendarioFragment"
    tools:showIn="@layout/app_bar_principal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Resumo"
        android:layout_margin="25px"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:text="O Calendário Acadêmico é um documento oficial do IFAM com o desígnio de situar as atividades"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:text="Clique no botão abaixo para fazer o download"/>

        <Button
            android:id="@+id/baixarCalendario"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_margin="40px"
            android:text="baixar"
            android:background="@drawable/button_primary"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</FrameLayout>