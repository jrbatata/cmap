<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activity.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageProfile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_responsavel"
                android:layout_margin="20dp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/textNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Nome e Sobrenome"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_toEndOf="@id/imageProfile"/>

            <TextView
                android:id="@+id/descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[Grau de Parentesco] de [Aluno], matrícula 2019.0000.0000"
                android:textColor="@android:color/white"
                android:layout_marginEnd="20dp"
                android:textSize="15sp"
                android:layout_toEndOf="@id/imageProfile"
                android:layout_below="@id/textNome"/>

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@android:color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Aplicações principais"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titulo"
                    android:layout_marginTop="-19dp">

                    <ImageView
                        android:id="@+id/ic_mensagens"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_caixa_de_mensagem"
                        app:layout_constraintBottom_toTopOf="@+id/caixa_mensagens"
                        app:layout_constraintEnd_toEndOf="@id/caixa_mensagens"
                        app:layout_constraintStart_toStartOf="@id/caixa_mensagens"
                        app:layout_constraintTop_toTopOf="@+id/ic_proximos" />

                    <TextView
                        android:id="@+id/caixa_mensagens"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Caixa de Mensagens"
                        android:textAlignment="center"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/proximos"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ic_mensagens" />

                    <ImageView
                        android:id="@+id/ic_proximos"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_forum"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/proximos"
                        app:layout_constraintStart_toStartOf="@id/proximos"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/proximos"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Perguntas e Respostas"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/forum"
                        app:layout_constraintStart_toEndOf="@+id/caixa_mensagens"
                        app:layout_constraintTop_toBottomOf="@+id/ic_proximos" />

                    <ImageView
                        android:id="@+id/ic_forum"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_proximos_eventos"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/forum"
                        app:layout_constraintStart_toStartOf="@id/forum"
                        app:layout_constraintTop_toTopOf="@+id/ic_proximos"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/forum"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Próximos eventos"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/proximos"
                        app:layout_constraintTop_toBottomOf="@+id/ic_forum" />

                </android.support.constraint.ConstraintLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>